                <connection type="single">
                    <roadLink fromId="1" toId="2">
                        <laneLink fromId="2" toId="1"/>
                        <laneLink fromId="-1" toId="-2"/>
                    </roadLink>
                </connection>
            </coupler>
            <automaticWidening active="main" length="20" ds="10"/>
