<roadNetwork xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../xml/input.xsd">
    <vars>
        <var id="half+rad" type="lindep" dp="halfAngleT*0.3 + radiusCR" />        
        <var id="radiusCR" type="normal" mu="150" sd="11.5" />        
        <var id="angleT" type="normal" mu="1.57" sd="0.12" />
        <var id="halfAngleT" type="lindep" dp="angleT/2" />
        
    </vars>
    <segments>

        <junction id="1" type="MA">
            <road id="1" classification="main" >	
                <referenceLine>
                    <spiral length="50"  Rs="0" Re="-300"/>
                    <arc length="100" R="-300"/>
                    <spiral length="90"  Rs="-300" Re="0"/>
                </referenceLine>
                <lanes>
                </lanes>
            </road>
            <road id="2" classification="access" >	
                <referenceLine>
                    <line length="50"/>
                </referenceLine>
            </road>
            <intersectionPoint refRoad="1" s="100">
                <adRoad id="2" s="0" angle="${angleT}"/>
            </intersectionPoint>
        </junction>

        <junction id="2" type="2M">
            <road id="1" classification="main" >	
                <referenceLine>
                    <line length="200"/>
                </referenceLine>
            </road>
            <road id="2" classification="access" >	
                <referenceLine>
                    <line length="200" />
                </referenceLine>
            </road>
            <intersectionPoint refRoad="1" s="100">
                <adRoad id="2" s="100" angle="1.57"/>
            </intersectionPoint>
        </junction>
        <connectingRoad id="3">
            <road id="1" classification="access" >	
                <referenceLine>
                    <line length="20"/>                    
                    <spiral length="50"  Rs="0" Re="${radiusCR}"/>
                    <arc length="50" R="${radiusCR}"/>
                    <spiral length="50"  Rs="${radiusCR}" Re="0"/>
                </referenceLine>
            </road>
        </connectingRoad>        
    </segments>
    <links refId="2" hdgOffset="0.0" xOffset="0" yOffset="0">
        <segmentLink fromSegment="2" toSegment="3" fromRoad="1" toRoad="1" fromPos="end" toPos="start" />
        <segmentLink fromSegment="3" toSegment="1" fromRoad="1" toRoad="1" fromPos="end" toPos="end" />
    </links>
</roadNetwork>
